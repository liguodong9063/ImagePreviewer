                                <Setter TargetName="EditNoImage" Property="Source" Value="pack://application:,,,/WpfControls.ImagePreviewer;component/Images/previousone-disabled.png" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
